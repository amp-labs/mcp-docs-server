{
  "name": "@amp-labs/mcp-docs-server",
  "version": "0.0.6",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-docs-server": "./dist/index.js"
  },
  "scripts": {
    "build": "vite build",
    "start": "node dist/index.js",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "publish": "npm publish --access public",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,md}\"",
    "prepare": "husky"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amp-labs/mcp-docs-server.git"
  },
  "author": "Ampersand",
  "description": "MCP server for Ampersand docs",
  "dependencies": {
    "@mintlify/openapi-parser": "^0.0.7",
    "@mintlify/validation": "^0.1.320",
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.8.1",
    "build": "^0.1.4",
    "dashify": "^2.0.0",
    "detect-port": "^2.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "trieve-ts-sdk": "^0.0.62",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@eslint/js": "^9.31.0",
    "@types/dashify": "^1.0.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.1",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.13.5",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/rollup": "^0.54.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "events": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "rollup": "^4.37.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "typescript": "^5.7.3",
    "vite": "^5.4.14",
    "vite-plugin-node": "^5.0.0",
    "vite-plugin-node-polyfills": "^0.23.0"
  },
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af",
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
